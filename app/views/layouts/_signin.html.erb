<div id = "signin-form" class = "form-shell">
<div id = "navigation-form">
  <div class="pseudo">
    <span class = "signin-link links">Войти</span>
    <span class = "signup-link links">Регистрация</span>
  </div>
</div>

<%= form_for(:session_user, url: sessions_path) do |f| %>
  <h2>Вход на сайт</h2>

  <div class="error_explanation">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
  <% end %>
  </div>

  <legend>Введите свои данные</legend>
  <div class="field">
    <%= f.text_field :email, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Пароль" %>
  </div>

  <%= f.submit "Войти", :class => "button middle_green"  %>
<% end %>

<div class="forgot_pass">
  Забыли пароль? 
  <span class = "reset-link">Восстановить</span>
  <%# link_to "Забыли пароль?", new_password_reset_path, class: "reset-link" %>
</div>

</div><!--/form-shell-->