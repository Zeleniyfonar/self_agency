<h1>Вход</h1>

<div>
  <%= form_for(:session_user, url: sessions_path) do |f| %>
    
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>

    <%= f.submit "Sign in", :class => "button middle_green"  %>
  <% end %>
  <p><%= link_to "Forgot password", new_password_reset_path %></p>
  <p>New user? <%= link_to "Sign up now!", registration_path %></p>
</div>