<div class="plug-2"></div>
<div class = "form-shell">
  <%= form_for @worker do |f| %>
    <fieldset>
    <h2>Создание услуги</h2>

    <% if @worker.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%# pluralize(@worker.errors.count, "error") %>
          Cведения об этой услуге не могут быть сохранены:
        </h2>
        <ul>
          <% @worker.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :name, :placeholder => "Название объявления" %>
    </div>

    <div class="field">
      <legend class="label">Описание:</legend>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.text_field :city, :placeholder => "Город" %>
    </div>

    <div class="field">
      <%= f.text_field :address, :placeholder => "Адрес"%>
    </div>

    <div class="field">
      <%= f.text_field :price, :placeholder => "Цена" %>
    </div>

    <div class="actions">
      <%= f.submit :class => "button middle_green", :value => "Добавить" %>
    </div>

    </fieldset>
  <% end %>
</div>