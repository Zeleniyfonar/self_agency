<%= form_for @advertisement do |f| %>
  <fieldset>
  <legend>Создание объявления</legend>

  <div class="field">
    <%= f.text_field :name, :placeholder => "Название объявления" %>
  </div>

  <div class="field">
    <%= f.text_field :city, :placeholder => "Город" %>
  </div>

  <div class="field">
    <%= f.password_field :address, :placeholder => "Адрес"%>
  </div>

  <div class="field">
    <%= f.password_field :price, :placeholder => "Цена" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "button middle_green" %>
  </div>

  </fieldset>
<% end %>