<div id = "signup-form", class = "form-shell">
<div id = "navigation-form">
  <div class="pseudo">
    <span class = "signin-link links">Войти</span>
    <span class = "signup-link links">Регистрация</span>
  </div>
</div>

<%= form_tag() do %>
  <h2>Регистрация</h2>
  <fieldset>
  <legend>Введите сведения о пользователе</legend>

  <div class="field">
    <%= text_field_tag :name, nil, placeholder: 'ФИО' %>
  </div>

  <div class="field">
    <%= text_field_tag :email, nil, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= password_field_tag :password, nil, placeholder: "Пароль"%>
  </div>

  <div class="field">
    <%= password_field_tag :password_confirmation, nil, placeholder: "Подтверждение" %>
  </div>
  <div class="field">
    <%= text_field_tag :phone, nil, placeholder: "Телефон" %>
  </div>

   <div class="actions">
    <%= submit_tag "Создать", class: "button middle_green" %>
  </div>

  </fieldset>
<% end %>

<div class="forgot_pass">
  Забыли пароль? 
  <span class = "reset-link">Восстановить</span>
  <%# link_to "Забыли пароль?", new_password_reset_path, class: "reset-link" %>
</div>

</div><!--/form-shell-->
