<div id = "signup-form", class = "form-shell">
<div id = "navigation-form">
  <div class="pseudo">
    <span class = "signin-link links">Войти</span>
    <span class = "signup-link links">Регистрация</span>
  </div>
</div>

<% @client = Client.new %>
<%# form_for @client, remote: true, :html => {:multipart => true} do |f| %>
<%= form_for @client, remote: true do |f| %>
  <h2>Регистрация</h2>

  <fieldset>
  <legend>Введите сведения о пользователе</legend>
  <div id="error_explanation">
  </div>
  <div class="field">
    <%= f.text_field :name, :placeholder => "ФИО" %>
  </div>

  <div class="field">
    <%= f.text_field :email, :placeholder => "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, :placeholder => "Пароль"%>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, :placeholder => "Подтверждение" %>
  </div>
  <div class="field">
    <%= f.text_field :phone, :placeholder => "Телефон" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "button middle_green", :value => 'Создать' %>
  </div>

  </fieldset>
<% end %>

<div class="forgot_pass">
  Забыли пароль? 
  <span class = "reset-link">Восстановить</span>
  <%# link_to "Забыли пароль?", new_password_reset_path, class: "reset-link" %>
</div>

</div><!--/form-shell-->
